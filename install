#!/bin/bash

# SYMLINKS
mkdir -p ~/.config
ln -rs pacman ~/.config/

ln -rs i3 ~/.config/
ln -rs i3blocks ~/.config/

ln -rs autorandr ~/.config/

ln -rs termite ~/.config/

ln -rs ranger ~/.config/

ln -rs nvim ~/.config/
ln -rs nvim ~/.vim
ln -rs nvim/init.vim ~/.vimrc

rm ~/.bash_profile
rm ~/.bashrc

ln -rs bash_profile ~/.bash_profile
ln -rs bashrc ~/.bashrc
ln -rs xbindkeysrc ~/.xbindkeysrc
ln -rs Xinitrc ~/.xinitrc
ln -rs Xresources ~/.Xresources

# include custom fonts
#mkdir -p ~/.local/share
#ln -rs fonts ~/.local/share/
#fc-cache -fv

# GIT
# set gitignore global
ln -rs gitignore-global ~/.gitignore
# set username und email
git config --global user.email "***REMOVED******REMOVED***"
git config --global user.name "***REMOVED***"

# INSTALLATION
# install plug.vim and create dirs
curl -fLo ~/.config/nvim/autoload/plug.vim --create-dirs \
    https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim

# install more initial needed packages
sudo pacman -S atool autorandr galculator htop i3 mplayer nextcloud-client nfs-utils otf-font-awesome pavucontrol-qt pulseaudio pulseaudio-alsa ranger sysstat termite ttf-dejavu ttf-droid unrar unzip wireless_tools xbindkeys xorg-server xorg-xinit xorg-xrandr
yay -S google-chrome dmenu2 #feh
