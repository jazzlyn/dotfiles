#!/bin/bash

# SYMLINKS
mkdir -p ~/.config
ln -rs pacman ~/.config/

ln -rs i3 ~/.config/
ln -rs i3blocks ~/.config/

ln -rs autorandr ~/.config/

ln -rs termite ~/.config/

ln -rs ranger ~/.config/

ln -rs nvim ~/.config/
ln -rs nvim ~/.vim
ln -rs nvim/init.vim ~/.vimrc

rm ~/.bash_profile
rm ~/.bashrc

ln -rs bash_profile ~/.bash_profile
ln -rs bashrc ~/.bashrc
ln -rs xbindkeysrc ~/.xbindkeysrc
ln -rs xinitrc ~/.xinitrc
ln -rs Xresources ~/.Xresources

# include custom fonts
#mkdir -p ~/.local/share
#ln -rs fonts ~/.local/share/
#fc-cache -fv

# GIT
# set gitignore global
ln -rs gitignore-global ~/.gitignore
# set username und email
git config --global user.email "***REMOVED******REMOVED***"
git config --global user.name "***REMOVED***"

# INSTALLATION
# install plug.vim and create dirs
curl -fLo ~/.config/nvim/autoload/plug.vim --create-dirs \
    https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim

# install more initial needed packages
yay -S acpi atool autorandr bluez-bluez-utils cups dmenu2 galculator gimp git gnome-keyring google-chrome highlight hplip htop i3 i3blocks-contrib mediainfo neovim net-tools network-manager-applet networkmanager-openvpn nodejs python-pynvim otf-font-awesome pavucontrol-qt postman-bin pulseaudio pulseaudio-alsa pulseaudio-bluetooth ranger scrot sysstat termite terraform ttf-dejavu ttf-droid ttf-roboto unrar unzip visual-studio-code-bin w3m wireless_tools xbindkeys xorg-server xorg-xinit xorg-xrandr #feh
