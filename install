#!/bin/bash

# SYMLINKS
mkdir -p ~/.config
ln -rs pacman ~/.config/

ln -rs i3 ~/.config/
ln -rs i3blocks ~/.config/

ln -rs autorandr ~/.config/

ln -rs alacritty ~/.config/
ln -rs zsh/.zshenv ~/

ranger --copy-config=all
rm ~/.config/ranger/rc.conf
rm ~/.config/ranger/scope.sh
rm ~/.config/ranger/commands.py
ln -rs ranger/rc.conf ~/.config/ranger/rc.conf
ln -rs ranger/scope.sh ~/.config/ranger/scope.sh
ln -rs ranger/commands.py ~/.config/ranger/commands.py

ln -rs nvim ~/.config/
ln -rs nvim ~/.vim
ln -rs nvim/init.vim ~/.vimrc

rm ~/.bashrc

ln -rs bashrc ~/.bashrc
ln -rs npmrc ~/.npmrc
ln -rs xbindkeysrc ~/.xbindkeysrc
ln -rs xinitrc ~/.xinitrc
ln -rs Xresources ~/.Xresources

# GIT
# set gitignore global
ln -rs gitignore-global ~/.gitignore
# add git alias
git config --global alias.recommit '!f() { git commit -e --file=$(git rev-parse --git-dir)/COMMIT_EDITMSG; }; f'
# set username und email
git config --global user.email "***REMOVED******REMOVED***"
git config --global user.name "***REMOVED***"

# INSTALLATION
# install plug.vim and create dirs
curl -fLo ~/.config/nvim/autoload/plug.vim --create-dirs \
    https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim

# install more initial needed packages
yay -Syu --needed --noconfirm \
acpi \
alacritty \
atool \
autorandr \
bash-completion \
bluez \
bluez-utils \
cups \
dmenu2 \
efibootmgr \
exiv2 \
galculator \
gimp \
gnome-keyring \
google-chrome \
highlight \
hplip \
htop \
i3blocks \
i3blocks-contrib-git \
i3-gaps \
i3lock \
i3status \
inetutils \
mediainfo \
neovim \
net-tools \
networkmanager \
network-manager-applet \
networkmanager-openvpn \
nfs-utils \
openssh \
openvpn \
pavucontrol-qt \
perl-image-exiftool \
pulseaudio-alsa \
pulseaudio-bluetooth \
python-pdftotext \
ranger \
scrot \
seahorse \
sysstat \
tree \
unrar \
unzip \
w3m \
wget \
wireless_tools \
x11-ssh-askpass \
xbindkeys \
xorg-server \
xorg-xinit \
xorg-xrandr \
otf-inconsolata-dz-powerline \
otf-font-awesome \
ttf-dejavu \
colordiff \
docker \
docker-compose \
git \
tig \
helm \
google-cloud-sdk \
nodejs \
npm \
nvm \
postman-bin \
python-pre-commit \
terraform \
terraform-docs-bin \
tflint-bin \
tfsec-bin \
visual-studio-code-bin \
yamllint \
discord \
mplayer
