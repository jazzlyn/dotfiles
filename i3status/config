# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

# config requires
# py3status
# cower

general {
        colors = true
        interval = 5
}

order += "disk /"
order += "arch_updates"
#order += "run_watch DHCP"
#order += "run_watch VPN"
order += "wireless _first_"
order += "bluetooth"
order += "battery 0"
order += "load"
order += "tztime local"
order += "sysdata" 

arch_updates {
    format = "Up: {pacman}"
}

wireless _first_ {
        format_up = "W: (%quality at %essid) %ip"
        format_down = "W: down"
}

bluetooth {
    format = "{name}"    
}

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

battery 0 {
        format = "%status %percentage %remaining"
}

run_watch DHCP {
        pidfile = "/var/run/dhclient*.pid"
}

run_watch VPN {
        pidfile = "/var/run/vpnc/pid"
}

tztime local {
        format = "%d.%m.%Y %H:%M:%S"
}

load {
        format = "%1min"
}

disk "/" {
        format = "%avail"
}

sysdata {
    format = "RAM: {mem_free_percent}%"
    high_threshold = 85
    med_threshold = 50
}
