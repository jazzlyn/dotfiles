# i3blocks config file
# https://github.com/vivien/i3blocks-contrib/tree/master

# Global configuration

command=/usr/lib/i3blocks/$BLOCK_NAME
separator_block_width=14
markup=none

[nm-vpn]
# needs nmcli, sh, awk
command=/usr/lib/i3blocks/nm-vpn
label=VPN: 
interval=5

[memory]
command=/usr/lib/i3blocks/memory
label=MEM 
color=#00FF00
interval=30

[cpu_usage]
# needs sysstat
command=/usr/lib/i3blocks/cpu_usage
label=CPU 
color=#00FF00
T_WARN=50
T_CRIT=80
DECIMALS=2
COLOR_NORMAL=#EBDBB2
COLOR_WARN=#FFFC00
COLOR_CRIT=#FF0000
interval=10
separator=false

[load_average]
command=/usr/lib/i3blocks/load_average
label=LOAD 
color=#00FF00
interval=10
separator=false

[temperature]
command=/usr/lib/i3blocks/temperature
label=TEMP 
color=#00FF00
T_WARN=70
T_CRIT=90
interval=10
separator=true

[iface]
command=/usr/lib/i3blocks/iface
label= 
instance=enp4s0
color=#00CCFF
interval=10
separator=true

[iface]
command=/usr/lib/i3blocks/iface
label= 
instance=wlo1
color=#00CCFF
interval=10
separator=true

[iface]
command=/usr/lib/i3blocks/iface
label= 
instance=wlp2s0
color=#00CCFF
interval=10
separator=true

[battery-poly]
command=/usr/lib/i3blocks/battery-poly
label=BAT 
interval=5
separator=true

[time]
command=date +%d.%m.%Y\ %T
interval=1
color=#CC66CC
separator=true
