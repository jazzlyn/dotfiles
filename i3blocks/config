# i3blocks config file
#
# Global configuration
#
command=/usr/lib/i3blocks/$BLOCK_NAME
separator_block_width=14
markup=none

[openvpn]
interval=20

[memory]
label=Mem
color=#A1887F
interval=30

[cpu_usage]
# needs sysstat
command=~/.dotfiles/i3blocks/blocklets/cpu_usage
label=CPU
interval=10
separator=false
#min_width=CPU: 100.00%

[temperature]
command=~/.dotfiles/i3blocks/blocklets/temperature
label=
interval=10
separator=false

[load_average]
label=
color=#00FF00
interval=10

[iface]
instance=wlp1s0
color=#00FF00
interval=10
separator=false

[wifi]
instance=wlp1s0
interval=10
separator=false

[essid]
command=/sbin/iwconfig wlp1s0 | perl -n -e'/ESSID:"(.*?)"/ && print $1'
interval=60


[battery]
#default instance 0
label=BAT
interval=30

[time]
command=date '+%d.%m.%Y %H:%M:%S'
interval=1
color=#FF80AB

